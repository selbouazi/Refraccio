<?xml version="1.0"?>
<ruleset name="Custom Ruleset"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.github.io/pmd-6.55.0/pmd-6.55.0.xsd">

    <description>Regles personalitzades per al projecte CCuenta/Main</description>

    <!-- 1) Detecta camps privats no utilitzats -->
    <rule ref="category/java/bestpractices.xml/UnusedPrivateField"/>

    <!-- 2) Evita literals duplicats; promou constants -->
    <rule ref="category/java/errorprone.xml/AvoidDuplicateLiterals">
        <properties>
            <property name="minimum" value="3"/>
        </properties>
    </rule>

    <!-- 3) Controla la complexitat ciclomàtica de mètodes -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="10"/>
        </properties>
    </rule>

</ruleset>
